{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@portfolio/ui": ["../../packages/ui"],
      "@portfolio/ui/*": ["../../packages/ui/*"],
      "@portfolio/lib": ["../../packages/lib"],
      "@portfolio/lib/*": ["../../packages/lib/*"],
      "@portfolio/config": ["../../packages/config"],
      "@portfolio/config/*": ["../../packages/config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/main/about-section.tsx", "components/header.tsx", "components/main/letter-glitch.tsx"],
  "exclude": ["node_modules"]
}
